<script>
        $(document).ready(function () {
            var sign = true;

            $("#submitBtn").click(function () {

                if ($("#InputTel").val() == "")
                {
                    alert("请输入登入名");
                    sign = false;
                }
                if ($("#InputPassword").val() == "" && sign == true) {
                    alert("请输入密码");
                    sign = false;
                }
                if (sign == true)
                {
                    $("#loginform").submit();
                }
            });
        });
</script>


