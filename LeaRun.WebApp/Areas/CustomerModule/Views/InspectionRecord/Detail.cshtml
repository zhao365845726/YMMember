@{
    ViewBag.Title = "检查记录》明细页面";
    Layout = "~/Views/Shared/_LayoutForm.cshtml";
}
<script type="text/javascript">
    $(function () {
        InitControl();
    })
    //得到一个对象实体
    function InitControl() {
        if (!!GetQuery('KeyValue')) {
            AjaxJson("/CustomerModule/InspectionRecord/SetForm", { KeyValue: GetQuery('KeyValue') }, function (data) {
                SetWebLable(data);
            });
        }
    }
</script>
<form id="form1" style="margin: 1px">
    <div class="bd" style="border-bottom: none; margin: 1px;">
        <div class="tipstitle_title settingtable bold bd todayInfoPanelTab rightPanelTitle_normal">
            <div class="tab_list_top" style="position: absolute">
                <div id="Tabbasic" class="tab_list bd actived" onclick="Tabchange('basic')">检查信息</div>
                <div id="Tabdiagnosis" class="tab_list bd " onclick="Tabchange('diagnosis')">诊断记录</div>
            </div>
        </div>
    </div>
    <div class="ScrollBar" style="margin: 1px; overflow: hidden;">
        <!--基本信息-->
        <div id="basic" class="tabPanel">
            <table class="form">
                <tr>
                    <th class='formTitle'>血压：</th>
                    <td class='formValue'>
                        <label id="BloodPressure" />
                    </td>
                </tr>
                <tr>
                    <th class='formTitle'>血糖：</th>
                    <td class='formValue'>
                        <label id="BloodSugar" />
                    </td>
                </tr>
                <tr>
                    <th class='formTitle'>血脂：</th>
                    <td class='formValue'>
                        <label id="BloodFat" />
                    </td>
                </tr>
                <tr>
                    <th class='formTitle'>血常规：</th>
                    <td class='formValue'>
                        <label id="RoutineBloodTest" />
                    </td>
                </tr>
                <tr>
                    <th class='formTitle'>尿常规：</th>
                    <td class='formValue'>
                        <label id="UrineRoutine" />
                    </td>
                </tr>
                <tr>
                    <th class='formTitle'>血型：</th>
                    <td class='formValue'>
                        <label id="BloodType" />
                    </td>
                </tr>
                <tr>
                    <th class='formTitle'>肝功能：</th>
                    <td class='formValue'>
                        <label id="LiverFunction" />
                    </td>
                </tr>
                <tr>
                    <th class='formTitle'>肾功能：</th>
                    <td class='formValue'>
                        <label id="RenalFunction" />
                    </td>
                </tr>
                <tr>
                    <th class='formTitle'>腹部B超：</th>
                    <td class='formValue'>
                        <label id="AbdomenUltrasonography" />
                    </td>
                </tr>
                <tr>
                    <th class='formTitle'>心电图：</th>
                    <td class='formValue'>
                        <label id="Electrocardiogram" />
                    </td>
                </tr>
                <tr>
                    <th class='formTitle'>微量元素：</th>
                    <td class='formValue'>
                        <label id="TraceElement" />
                    </td>
                </tr>
                <tr>
                    <th class='formTitle'>附件：</th>
                    <td class='formValue'>
                        <label id="Enclosure" />
                    </td>
                </tr>
                <tr style="display:none;">
                    <th class='formTitle'>会员Id：</th>
                    <td class='formValue'>
                        <label id="MemberId" />
                    </td>
                </tr>
            </table>
        </div>
        <div id="diagnosis" class="tabPanel" style="display:none;">
            <table class="form">
                <tr>
                    <th class='formTitle'>病历情况：</th>
                    <td class='formValue'>
                        <label id="MedicalRecord" />
                    </td>
                </tr>
                <tr>
                    <th class='formTitle'>中医诊断：</th>
                    <td class='formValue'>
                        <label id="ChineseDiagnosis" />
                    </td>
                </tr>
                <tr>
                    <th class='formTitle'>西医诊断：</th>
                    <td class='formValue'>
                        <label id="WESTDiagnosis" />
                    </td>
                </tr>
                <tr>
                    <th class='formTitle'>调理建议：</th>
                    <td class='formValue'>
                        <label id="ConditionRecommand" />
                    </td>
                </tr>
            </table>
        </div>
    </div>
</form>
